<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark bg mb-2">
        <div class="container">
          <a class="navbar-brand " href="/">
            <span>Bookers</span>
          </a>
          <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-lavel="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="navbar-collapse collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto pt-2">
              <% if user_signed_in? %>
              <li class="mb-2">
                <a class="fas fa-home nav-link text-light", href="/users/#{current_user.id}"> Home</a>
              </li>
              <li class="mb-2">
                <a class="fas fa-users nav-link text-light", href="/users"> Users</a>
              </li>
              <li class="mb-2">
                <a class="fas fa-book-open nav-link text-light", href="/books"> Books</a>
              </li>
              <li class="mb-1">
                <a class="fas fa-sign-out-alt nav-link text-light", rel="nofollow" data-method="delete" href="/users/sign_out"> logout</a>
              </li>
              <% else %>
              <li class="mb-2">
              <a class="fas fa-home nav-link text-light", href="/"> Home</a>
              </li>
              <li class="mb-2">
              <a class="fas fa-link nav-link text-light", href="/homes/show"> About</a>
              </li>
              <li class="mb-2">
              <a class="fas fa-user-plus nav-link text-light", href="/users/sign_up"> sign up</a>
              </li>
              <li class="mb-1">
              <a class="fas fa-sign-in-alt nav-link text-light", href="/users/sign_in"> login</a>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
