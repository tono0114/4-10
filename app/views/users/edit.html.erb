<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto mt-3">
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <h3 class="text-danger"><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
        <% @user.errors.full_messages.each do |message| %>
          <ul class="text-danger m-0">
            <li><%= message %></li>
          </ul>
        <% end %>
      <% end %>
      <%= form_with model:@user,local:true do |f| %>
      <div class="form-group">
        <p>Name</p>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <p>Image</p>
        <%= f.attachment_field :profile_image, class: "form-control-file" %>
      </div>
      <div class="form-group">
        <p>Introduction</p>
        <%= f.text_area :introduction, class: "form-control" %>
      <div class="form-group">
      <%= f.submit"Update User", class: "btn btn-md btn-secondary mt-3" %>
      </div>
      <% end %>
    </div>
  </div>
</div>